{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  
  "enabledManagers": [
    "ansible", 
    "ansible-galaxy"
  ],

  "regexManagers": [
    {
      "fileMatch": ["requirements.yml"],
      "matchStrings": [
        "^\\s*-\\s*src:\\s*\"?(?<depName>https?://[^\"]+)\"?\\s*\\n\\s*version:\\s*\"?(?<currentValue>[^\"]+)\"",
        "^\\s*-\\s*name:\\s*\"?(?<depName>[^\\s]+)\"?\\s*\\n\\s*version:\\s*\"?(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "ansible-galaxy"
    }
  ],

  "ansible-galaxy": {
    "fileMatch": ["requirements.yml"]
  }
}
