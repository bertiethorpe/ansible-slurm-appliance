{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "ansible",
    "ansible-galaxy"
  ],
  "regexManagers": [
    {
      "fileMatch": ["requirements.yml"],
      "matchStrings": [
        "^\\s*-\\s*name:\\s*\"?(https://github\\.com/(?<repoOwner>[^/]+)/(?<repoName>[^/]+))\"?\\s*\\n\\s*type:\\s*git\\s*\\n\\s*version:\\s*\"?(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "{{{repoOwner}}}/{{{repoName}}}",
      "versioningTemplate": "semver"
    }
  ]
}
