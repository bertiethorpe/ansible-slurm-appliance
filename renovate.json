{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "ansible",
    "ansible-galaxy",
    "regex"
  ],
  "ansible": [
    {
      "fileMatch": ["requirements.yml"]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["requirements.yml"],
      "matchStrings": [
        "-\\s*name:\\s*https://github\\.com/(?<repoOwner>[^/]+)/(?<repoName>[^/]+)\\s*\\n\\s*type:\\s*git\\s*\\n\\s*version:\\s*(?<currentValue>v?[^\\s]+)"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "{{{repoOwner}}}/{{{repoName}}}",
      "versioningTemplate": "semver"
    }
  ]
}
