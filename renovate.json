{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "ansible",
    "ansible-galaxy",
    "git-submodules",
    "regex"
  ],
  "regexManagers": [
    {
      "fileMatch": ["requirements.yml"],
      "matchStrings": [
        "^\\s*-\\s*name:\\s*\"?(?<depName>https?://[^\"]+)\"?\\s*\\n\\s*type:\\s*git\\s*\\n\\s*version:\\s*\"?(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "git",
      "versioningTemplate": "semver"
    }
  ]
}
