{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "enabledManagers": [
    "ansible", 
    "ansible-galaxy"
  ],

  "regexManagers": [
    {
      "fileMatch": ["requirements.yml"],
      "matchStrings": [
        "^\\s*-\\s*name:\\s*\"?(?<depName>https?://[^\"]+)\"?\\s*\\n\\s*type:\\s*git\\s*\\n\\s*version:\\s*\"?(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "git"
    }
  ],

  "packageRules": [
    {
      "matchPackagePrefixes": [
        "https://github.com/stackhpc/ansible_collection_slurm_openstack_tools",
        "https://github.com/azimuth-cloud/ansible-collection-terraform"
      ],
      "datasource": "git"
    }
  ]
}
